{
  "name": "txtspy",
  "version": "1.0.0",
  "description": "A CLI tool for text search",
  "main": "dist/bin/txtspy.js",
  "type": "module",
  "bin": {
    "txtspy": "./dist/bin/cli.js"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node dist/bin/txtspy.js",
    "build": "esbuild bin/txtspy.ts --bundle --platform=node --target=node18 --outfile=dist/bin/txtspy.js --banner:js='#!/usr/bin/env node' --minify --format=esm",
    "dev": "tsx watch bin/txtspy.ts",
    "test": "jest",
    "docs": "typedoc --out docs src --entryPointStrategy expand"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ingEze/txtspy.git"
  },
  "keywords": [
    "cli",
    "text",
    "search",
    "command-line-tool",
    "text-processing"
  ],
  "author": "Ezequiel Saucedo",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.4.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@types/chalk": "^0.4.31",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.25.4",
    "eslint": "^8.57.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "ts-standard": "^12.0.2",
    "tsx": "^4.19.3",
    "typedoc": "^0.28.4",
    "typescript": "^5.8.3"
  }
}
